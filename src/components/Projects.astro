---
import { siteConfig } from "../config.ts";
---

<section class="py-16 px-8 md:px-24 bg-white text-black">
  <h2 class="font-heading text-3xl mb-8 border-b-2 border-gray-300 inline-block pb-2">Projects</h2>

  <div class="grid gap-8">
    {siteConfig.projects.map((project) => (
      <div class="p-6 border border-gray-200 rounded-lg shadow hover:shadow-lg transition transform hover:-translate-y-1">
        <h3 class="font-heading text-xl mb-3">{project.name}</h3>
        <p class="font-sans text-gray-700 mb-4">{project.description}</p>
        <div class="flex flex-wrap gap-2">
          {project.skills.map((skill) => (
            <span class="font-sans text-gray-800 text-sm bg-gray-100 px-2 py-1 rounded">{skill}</span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
