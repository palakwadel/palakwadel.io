---
import { siteConfig } from "../config.ts";
---

<section class="min-h-screen flex flex-col justify-center items-start px-8 md:px-24 bg-white text-black">
  <!-- Animated Intro Text -->
  <div class="space-y-4 animate-fadeIn">
    <h1 class="font-heading text-5xl md:text-6xl leading-tight">
      Hi, Iâ€™m {siteConfig.name}
    </h1>
    <p class="font-sans text-gray-700 text-lg md:text-xl max-w-2xl">
      I build intelligent analytics solutions and AI-driven insights that empower businesses to make data-driven decisions.
    </p>

    <!-- Highlight your core areas -->
    <div class="flex flex-wrap gap-2 mt-4">
      <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded font-sans text-sm hover:bg-gray-200 transition">Data Analytics</span>
      <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded font-sans text-sm hover:bg-gray-200 transition">Business Intelligence</span>
      <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded font-sans text-sm hover:bg-gray-200 transition">AI & Automation</span>
      <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded font-sans text-sm hover:bg-gray-200 transition">Reporting & Dashboards</span>
    </div>
  </div>
</section>

<style>
@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(20px); }
  100% { opacity: 1; transform: translateY(0); }
}
.animate-fadeIn {
  animation: fadeIn 1.2s ease forwards;
}
</style>
