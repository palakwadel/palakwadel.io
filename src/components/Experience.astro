---
import { siteConfig } from "../config.ts";
---

<section class="py-16 px-8 md:px-24 bg-gray-50 text-black">
  <h2 class="font-heading text-3xl mb-8 border-b-2 border-gray-300 inline-block pb-2">Experience</h2>
  
  <div class="space-y-8">
    {siteConfig.experience.map((job) => (
      <div class="p-6 bg-white rounded-lg shadow hover:shadow-lg transition transform hover:-translate-y-1">
        <h3 class="font-heading text-xl">{job.title} â€” {job.company}</h3>
        <p class="font-sans text-gray-500 mb-4">{job.dateRange}</p>
        <ul class="font-sans list-disc list-inside text-gray-700 space-y-1">
          {job.bullets.map((bullet) => (
            <li>{bullet}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
